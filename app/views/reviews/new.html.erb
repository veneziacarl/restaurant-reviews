Review Form for <%= @restaurant.name %>

<%= form_for [@restaurant, @review] do |f| %>

  <div class="field">
    <%= f.label :rating, 'Rating' %>
    <%= f.text_field :rating %>
  </div>

  <div class="field">
    <%= f.label :body, 'Review' %>
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Add Review' %>
  </div>

<% end %>
